<?xml version="1.0" encoding="UTF-8"?>
<!-- This file is not required if you don't need any extra configuration. -->
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
        http://java.sun.com/xml/ns/javaee
        http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">

	<!-- This descriptor activates the JSF 2.0 Servlet -->

	<!-- Write your navigation rules here. You are encouraged to use CDI for 
		creating @Named managed beans. -->
	
	
	<name>timetable</name>

	<application>
		<locale-config>
			<default-locale>bg</default-locale>
		</locale-config>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>messages</var>
		</resource-bundle>
	</application>

	<navigation-rule>
		<from-view-id>/login.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{identity.login}</from-action>
			<if>#{identity.loggedIn}</if>
			<to-view-id>/private/help.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{identity.login}</from-action>
			<from-outcome>failed</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/*</from-view-id>
		<navigation-case>
			<if>#{not identity.loggedIn}</if>
			<to-view-id>/login.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/private/index.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{timetableController.save}</from-action>
			<from-outcome>true</from-outcome>
			<to-view-id>/private/viewOldSolutions.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/private/grade.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{gradeAction.generateMaps}</from-action>
			<from-outcome>next</from-outcome>
			<to-view-id>/private/gradeSubjects.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{gradeAction.cancel}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/private/grades.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/private/gradeSubjects.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{gradeAction.splitIntoGroups}</from-action>
			<from-outcome>next</from-outcome>
			<to-view-id>/private/gradeGroups.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{gradeAction.splitIntoGroups}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/private/grades.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{gradeAction.cancel}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/private/grades.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>


	<navigation-rule>
		<from-view-id>/private/gradeGroups.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{gradeAction.save}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/private/grades.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{gradeAction.cancel}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/private/grades.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/private/room.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{roomAction.save}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/private/rooms.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{roomAction.cancel}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/private/rooms.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/private/teacher.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{teacherAction.save}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/private/teachers.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{teacherAction.cancel}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/private/teachers.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/private/periodOffRequests.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{periodOffRequestAction.save}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/private/teachers.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{periodOffRequestAction.cancel}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/private/teachers.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/private/subject.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{subjectAction.save}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/private/subjects.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{subjectAction.cancel}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/private/subjects.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/private/teachers.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{periodOffRequestAction.load}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/private/periodOffRequests.xhtml</to-view-id>
			<redirect />
		</navigation-case>
		<navigation-case>
			<from-action>#{teacherAction.load}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/private/teacher.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/private/subjects.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{subjectAction.load}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/private/subject.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/private/rooms.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{roomAction.load}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/private/room.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/private/grades.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{gradeAction.load}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/private/grade.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>

</faces-config>
